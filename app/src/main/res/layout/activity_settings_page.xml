<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_teal"
    android:orientation="vertical"
    tools:context=".SettingsPage">

    <TextView
        android:id="@+id/setting_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:fontFamily="@font/hagrid"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:background="@color/light_teal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/settings_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Name: "
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black_shade_1"
                android:fontFamily="@font/dmsans"
                android:textSize="15dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_toRightOf="@id/settings_name"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_edit"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lighter_green"
                    android:fontFamily="@font/dmsans"
                    android:layout_marginEnd="20dp"
                    android:hint="Edit"/>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:background="@color/light_teal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/settings_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Email: "
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black_shade_1"
                android:fontFamily="@font/dmsans"
                android:textSize="15dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_toRightOf="@id/settings_email"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lighter_green"
                    android:fontFamily="@font/dmsans"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:hint="Edit"/>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:background="@color/light_teal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/settings_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="City: "
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black_shade_1"
                android:fontFamily="@font/dmsans"
                android:textSize="15dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_toRightOf="@id/settings_city"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/city_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lighter_green"
                    android:fontFamily="@font/dmsans"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:hint="Edit"/>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:background="@color/light_teal"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lighter_green"
                    android:fontFamily="@font/dmsans"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="15sp"
                    android:hint="Edit Password"/>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/logout_button"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_shade_1"
            android:fontFamily="@font/dmsans"
            android:backgroundTint="@color/light_teal"
            android:text="Sign Out"/>

    </LinearLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/settings_icon"
            android:backgroundTint="@color/dark_teal"/>

        <ImageView
            android:id="@+id/maps_button"
            android:layout_toRightOf="@+id/settings_button"
            android:layout_width="50dp"
            android:layout_height="57dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/maps_icon" />

        <ImageView
            android:id="@+id/home_button"
            android:layout_toRightOf="@+id/maps_button"
            android:layout_width="60dp"
            android:layout_height="57dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_icon" />

        <ImageView
            android:id="@+id/news_button"
            android:layout_toRightOf="@+id/home_button"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/news_icon" />

        <ImageView
            android:id="@+id/resources_button"
            android:layout_toRightOf="@+id/news_button"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/resources_icon" />

    </RelativeLayout>

</LinearLayout>